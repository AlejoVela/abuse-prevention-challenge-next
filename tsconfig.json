{
  "include": ["./dist/types/**/*.ts", "./next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/app/*": ["./app/*"],
      "@assets/*": ["./public/assets/*"],
      "@public/*": ["./public/*"],
      "@typings/*": ["./types/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./app/*"],
      "@services/*": ["./services/*"],
      "@tests/*": ["./tests/*"],
      "@utils/*": ["./utils/*"]
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true
  }
}
